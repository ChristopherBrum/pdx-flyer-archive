<div class="container mx-auto px-4 py-8 max-w-4xl">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-4xl font-bold">Bands</h1>

    <%= link_to new_band_path, class: "btn btn-primary" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a 1 1 0 110 2h-5v5a 1 1 0 11-2 0v-5H4a 1 1 0 110-2h5V4a 1 1 0 011-1z" clip-rule="evenodd" />
      </svg>
      New Band
    <% end %>
  </div>

  <% if @bands.empty? %>
    <div class="hero bg-base-200 rounded-box">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h2 class="text-2xl font-bold">No bands yet</h2>
          <p class="py-6">Add your first band to begin building your archive.</p>
          <%= link_to "Add First Band", new_band_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="bg-base-100 rounded-lg shadow-lg">
      <ul class="menu menu-lg w-full">
        <% @bands.each do |band| %>
          <li class="border-b border-base-200 last:border-b-0">
            <div class="flex items-center justify-between py-4">
              <div class="flex-1">
                <%= link_to band_path(band), class: "flex flex-col items-start p-0 hover:bg-transparent" do %>
                  <h2 class="text-lg font-semibold"><%= band.name %></h2>
                  <div class="flex flex-wrap gap-2 mt-2 text-sm text-base-content/60">
                    <% if band.city.present? %>
                      <span class="flex items-center gap-1">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                        <%= band.city %>, <%= band.state %>
                      </span>
                    <% end %>
                    <% if band.flyers.any? %>
                      <span class="flex items-center gap-1">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                        </svg>
                        <%= pluralize(band.flyers.count, 'flyer') %>
                      </span>
                    <% end %>
                    <% if band.website.present? %>
                      <span class="flex items-center gap-1">
                        
                        <%= link_to "Website", band.website, class: "link link-primary", target: "_blank", onclick: "event.stopPropagation()" %>
                      </span>
                    <% end %>
                  </div>
                <% end %>
              </div>
              <div class="flex gap-2">
                <%= link_to "View", band_path(band), class: "btn btn-sm btn-ghost" %>
                <%= button_to "Delete", band_path(band),
                      method: :delete,
                      data: { turbo_confirm: "Are you sure you want to delete #{band.name}?" },
                      class: "btn btn-sm btn-ghost text-error" %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="flex justify-center mt-4">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>
