<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "â† Back to Flyers", flyers_path, class: "link" %>
  </div>

  <div class="card bg-base-100 shadow-xl">
    <div class="grid grid-cols-1 lg:grid-cols-2">
      
      <!-- Image -->
      <figure class="bg-base-200 flex items-center justify-center p-4">
        <% if @flyer.image.attached? %>
          <%= image_tag @flyer.image, class: "rounded-lg max-h-[600px] object-contain" %>
        <% else %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-40 w-40 text-base-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        <% end %>
      </figure>

      <div class="card-body">
        <h1 class="card-title text-4xl font-bold"><%= @flyer.title %></h1>

        <% if @flyer.event_date.present? %>
          <p class="text-lg opacity-80">
            <strong>Date:</strong> <%= @flyer.event_date.strftime("%B %d, %Y") %>
          </p>
        <% end %>

        <% if @flyer.venue %>
          <p class="text-lg opacity-80">
            <strong>Venue:</strong>
            <%= link_to @flyer.venue.name, @flyer.venue, class: "link" %>
            <% if @flyer.venue.city.present? %>
              <span class="opacity-60">(<%= @flyer.venue.city %>, <%= @flyer.venue.state %>)</span>
            <% end %>
          </p>
        <% end %>

        <% if @flyer.bands.any? %>
          <div>
            <strong>Bands:</strong>
            <div class="mt-2 flex flex-wrap gap-2">
              <% @flyer.bands.each do |band| %>
                <%= link_to band_path(band), class: "badge badge-outline hover:badge-primary" do %>
                  <%= band.name %>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>

        <% if @flyer.notes.present? %>
          <div class="mt-4">
            <strong>Notes:</strong>
            <p class="opacity-80"><%= simple_format @flyer.notes %></p>
          </div>
        <% end %>

        <div class="card-actions justify-end mt-6">
          <%= link_to "Edit", edit_flyer_path(@flyer), class: "btn btn-primary" %>
          <%= button_to "Delete", @flyer, method: :delete, data: { turbo_confirm: "Delete this flyer?" }, class: "btn btn-error btn-outline" %>
        </div>
      </div>
    </div>
  </div>
</div>
