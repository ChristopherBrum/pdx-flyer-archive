<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-4xl font-bold">PDX Flyers Archive</h1>
    <%= link_to new_flyer_path, class: "btn btn-primary" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
      </svg>
      New Flyer
    <% end %>
  </div>

  <% if @flyers.empty? %>
    <div class="hero bg-base-200 rounded-box">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h2 class="text-2xl font-bold">No flyers yet</h2>
          <p class="py-6">Start building your archive by adding your first flyer.</p>
          <%= link_to "Add First Flyer", new_flyer_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @flyers.each do |flyer| %>
        <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow">
          <figure class="bg-base-200 h-64 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-base-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </figure>

          <div class="card-body">
            <h2 class="card-title">
              <%= flyer.title %>
              <% if flyer.event_date && flyer.event_date > Date.today %>
                <div class="badge badge-secondary">Upcoming</div>
              <% end %>
            </h2>

            <div class="space-y-2 text-sm">
              <% if flyer.event_date %>
                <div class="flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <span><%= flyer.event_date.strftime("%B %d, %Y") %></span>
                </div>
              <% end %>

              <% if flyer.venue %>
                <div class="flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <span>
                    <%= flyer.venue.name %>
                    <% if flyer.venue.city.present? %>
                      <span class="text-base-content/60">
                        (<%= flyer.venue.city %>, <%= flyer.venue.state %>)
                      </span>
                    <% end %>
                  </span>
                </div>
              <% end %>

              <% if flyer.bands.any? %>
                <div class="flex items-start gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
                  </svg>
                  <div class="flex flex-wrap gap-1">
                    <% flyer.bands.each do |band| %>
                      <% if band.website.present? %>
                        <%= link_to band.name, band, class: "badge badge-outline hover:badge-primary" %>
                      <% else %>
                        <span class="badge badge-outline"><%= band.name %></span>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              <% end %>

              <% if flyer.notes.present? %>
                <p class="text-base-content/70 text-xs mt-2">
                  <%= truncate(flyer.notes, length: 120) %>
                </p>
              <% end %>
            </div>

            <div class="card-actions justify-end mt-4">
              <%= link_to "View", flyer_path(flyer), class: "btn btn-sm btn-primary" %>
              <%= link_to "Edit", edit_flyer_path(flyer), class: "btn btn-sm btn-ghost" %>
              <%= button_to "Delete", flyer_path(flyer), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-sm btn-ghost text-error" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
